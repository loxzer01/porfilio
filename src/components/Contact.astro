---
import EmailIcon from "./icons/EmailIcon.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import Whatsapp from "./icons/whatsapp.astro";
---

<!-- Contactame en mis  -->
<main class="max-w-7xl mx-auto px-4 py-8" id={Astro.props.id}>
  <h1 class="text-2xl font-bold mb-8 tracking-wide">Contact</h1>

  <div class="flex flex-col md:flex-row gap-8">
    <!-- Card con el GIF de gato -->
    <div
      class="w-full md:w-2/3 border border-gray-700 rounded-md p-2 flex flex-col items-center justify-center"
    >
      <img
        src="https://media0.giphy.com/media/v1.Y2lkPTc5MGI3NjExeWJxZzRmZWltNHd5bWpsZThmaGp5eWo4dXNkOGF4OTZ2ZXM2OWMwNiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/CuuSHzuc0O166MRfjt/giphy.gif"
        alt="GIF de un gato"
        class="rounded-md w-full max-w-md"
      />
    </div>

    <!-- Botones de contacto (WhatsApp, Correo, LinkedIn) -->
    <div class="w-full md:w-1/3 flex flex-col gap-4">
      <!-- WhatsApp -->
      <a
        href="https://wa.me/351920670446"
        target="_blank"
        rel="noopener noreferrer"
        class="border border-gray-700 rounded-md p-4 flex justify-start gap-3 items-center hover:bg-gray-800 transition"
      >
        <!-- Icono de salir/external link (ejemplo con Heroicons) -->
        <Whatsapp class="size-7" />
        <span class="text-sm tracking-wide">WhatsApp</span>
      </a>

      <!-- Correo -->
      <a
        href="mailto:banquezfrancisco@banquez@yahoo.com"
        class="border border-gray-700 rounded-md p-4 flex justify-start gap-3 items-center hover:bg-gray-800 transition"
      >
        <EmailIcon class="size-7" />
        <span class="text-sm tracking-wide">Correo</span>
      </a>

      <!-- LinkedIn -->
      <a
        href="https://linkedin.com/in/franciscobanquez"
        target="_blank"
        rel="noopener noreferrer"
        class="border border-gray-700 rounded-md p-4 flex justify-start gap-3 items-center hover:bg-gray-800 transition"
      >
        <LinkedInIcon class="size-6" />
        <span class="text-sm tracking-wide">LinkedIn</span>
      </a>
    </div>
  </div>
</main>
